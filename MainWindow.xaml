<Window x:Class="Sorting_Visualiser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sorting_Visualiser"
        mc:Ignorable="d"
        Background="Black"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="600*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Shuffle" Width="100" Click="ShuffleBtn"/>
            <Slider ValueChanged="Change_Size" Width="100" Minimum="200" Maximum="600" TickFrequency="1" Name="sizeSlider"/>
            <Button Content="Bubble sort" Width="100" Click="SortBtn"/>
            <Button Content="Selection sort" Width="100" Click="SelectionBtn"/>


        </StackPanel>
        <Grid Name="grid" Grid.Row="1" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Center">

        </Grid>
    </Grid>
</Window>
